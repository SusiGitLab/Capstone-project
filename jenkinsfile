pipeline {
  agent any
  stages {
    stage('Get Branch Name') {
      steps {
        script {
          branchName = sh(script: 'git branch --show-current', returnStdout: true).trim()
          echo "Current branch: $branchName"
        }
      }
    }
    stage('Build') {
      steps {
        sh 'sh build.sh'
      }
    }
    stage('Deploy') {
      steps {
        sh 'sh deploy.sh'
      }
    }
  }
}
  

                 
    
  
    

  
